{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["DOM", "ES2022", "DOM.Iterable"],
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "types": ["vite/client", "firefox-webext-browser"]
  },
  "include": ["src", "index.html", "admin-dashboard/src/app", "src/features"],
  "exclude": ["../node_modules", "dist"]
}