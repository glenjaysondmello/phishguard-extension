{
  "manifest_version": 2,
  "name": "PhishGuard",
  "version": "0.1.0",
  "description": "Lightweight multilingual phishing protection (English & Hindi)",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "<all_urls>"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_start"
    }
  ],

  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },

  "web_accessible_resources": [
    "model/*",
    "icons/*",
    "locales/*"
  ]
}